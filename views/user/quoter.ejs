<body>
  <div class="navbar_wrapper">
      <div class="navbar_container showcase_navbar">
        <%- include("./layout/navbar.ejs") %>
      </div>
  </div>
  <main>
  <div class="container">
    <div class="progress-bar"><div class="progress" id="progress"></div></div>
    <form id="quoteForm">
      <div class="step active" data-step="1">
        <div class="form-group">
          <label for="screenCount">How many screens?</label>
          <input type="number" id="screenCount" required />
        </div>
        <div class="form-group">
          <label for="largePanes">Large panes:</label>
          <input type="number" id="largePanes" required />
        </div>
        <div class="form-group">
          <label for="regularPanes">Regular panes:</label>
          <input type="number" id="regularPanes" required />
        </div>
        <div class="form-group">
          <label for="smallPanes">Small panes:</label>
          <input type="number" id="smallPanes" required />
        </div>
        <button type="button" onclick="nextStep(1)">Next</button>
      </div>
      <div class="step" data-step="2">
        <div class="form-group">
          <label for="secondStory">Second story panes?</label>
          <select id="secondStory" required>
            <option value="">Select</option>
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </div>
        <div class="form-group">
          <label for="interiorExterior">Interior & Exterior?</label>
          <select id="interiorExterior" required>
            <option value="">Select</option>
            <option value="both">Both</option>
            <option value="exterior">Exterior Only</option>
          </select>
        </div>
        <div class="form-group">
          <label for="deepTracks">Deep clean tracks?</label>
          <select id="deepTracks" required>
            <option value="">Select</option>
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </div>
        <button type="button" onclick="nextStep(2)">Next</button>
      </div>
      <div class="step" data-step="3">
        <div class="form-group">
          <label for="address">Address (to calculate mileage)</label>
          <input type="text" id="address" required />
        </div>
        <button type="submit">Submit</button>
      </div>
    </form>
  </div>


  </main>
  <div class="loader-overlay" id="loader"><div class="loader"></div></div>
  <div class="success-container" id="success"><h2>âœ… Quote Submitted Successfully!</h2></div>
