
  <section class="pricing-section">

    <header class="header-price">
      <h1>Price List</h1>
    </header>

    <div class="price-grid">

      <div class="price-section">
        <div class="price-item">
          <span class="title">Standard Screen Cleaning</span>
          <span>$3 per screen</span>
        </div>
        <div class="price-item">
          <span class="title">Standard Windows</span>
          <span>$12 (interior & exterior) | $6 (interior or exterior) per pane</span>
        </div>
        <div class="price-item">
          <span class="title">Large Windows & Sliding Glass</span>
          <span>$18 (interior & exterior) | $8 (interior or exterior) per pane</span>
        </div>
        <div class="price-item">
          <span class="title" >Hard-to-Reach / 2nd Story</span>
          <span>+ $7 per pane (exterior & interior)</span>
        </div>
        <div class="price-item">
          <span class="title" >Extra Premium Detail Finish</span>
          <span>+ $3 / window</span>
        </div>
        <div class="line"></div>
      </div>

      <div class="calculator-section">
        <h3>Get Your Estimate</h3>
        <div class="calc-row">
          <label for="standard">Standard Windows</label>
          <input type="number" id="standard" min="0" placeholder="0" />
        </div>
        <div class="calc-row">
          <label for="large">Large Windows</label>
          <input type="number" id="large" min="0" placeholder="0" />
        </div>
        <div class="calc-row">
          <label for="screens">Screens</label>
          <input type="number" id="screens" min="0" placeholder="0" />
        </div>
        <div class="calc-row">
          <label for="hard">Hard-to-Reach Windows</label>
          <input type="number" id="hard" min="0" placeholder="0" />
        </div>
        <div class="calc-row">
          <label for="detail">Add Detail Finish?</label>
          <input type="checkbox" id="detail" />
        </div>

        <div class="estimate-box">
          <h4 class="title">Estimated Total</h4>
          <p id="interiorTotal">Interior Only: $0.00</p>
          <p id="fullTotal">Interior + Exterior: $0.00</p>
        </div>
      </div>

    </div>
    <!-- <div class="wave-container">
      <div  class="wave-watermark"/>
    </div> -->
    <script>
      function calculateEstimate() {
        const standard = parseInt(document.getElementById("standard").value) || 0;
        const large = parseInt(document.getElementById("large").value) || 0;
        const screens = parseInt(document.getElementById("screens").value) || 0;
        const hard = parseInt(document.getElementById("hard").value) || 0;
        const detail = document.getElementById("detail").checked;

        const screenPrice = 3;
        const standardPriceInterior = 6;
        const standardPriceBoth = 12;
        const largePriceInterior = 8;
        const largePriceBoth = 18;
        const hardFee = 7;
        const detailFee = 3;

        const interior = (
          standard * standardPriceInterior +
          large * largePriceInterior +
          screens * screenPrice +
          hard * hardFee
        );

        const both = (
          standard * standardPriceBoth +
          large * largePriceBoth +
          screens * screenPrice +
          hard * hardFee
        );

        const detailCost = detail ? (standard + large + hard) * detailFee : 0;

        document.getElementById("interiorTotal").textContent = `Interior Only: $${(interior + detailCost).toFixed(2)}`;
        document.getElementById("fullTotal").textContent = `Interior + Exterior: $${(both + detailCost).toFixed(2)}`;
      }
      document.querySelectorAll('input').forEach(input => {
        input.addEventListener('input', calculateEstimate);
        input.addEventListener('change', calculateEstimate);
      });
    </script>
</section>
