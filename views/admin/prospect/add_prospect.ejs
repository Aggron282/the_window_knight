<!-- Prospect Modal -->
<div id="prospectModal" class="fixed inset-0 bg-black bg-opacity-60 z-50 hidden items-center justify-center">
  <div class="bg-gray-900 text-white rounded-xl shadow-2xl w-full max-w-2xl p-8 relative">
    <form onsubmit="submitProspectForm(event)"  >
    <!-- Exit Button -->
    <button onclick="toggleProspectAddModal()" class="absolute top-4 right-4 text-gray-400 hover:text-white text-xl font-bold">
      ×
    </button>

    <h2 class="text-2xl font-bold mb-6">Add / Edit Prospect</h2>

    <form action="/prospects" method="POST" class="space-y-5">
      <div>
        <label class="block mb-1 font-medium">Name</label>
        <input name="name" type="text" required class="w-full px-4 py-2 rounded-md bg-gray-800 border border-gray-700 focus:ring-2 focus:ring-blue-500">
      </div>

      <div>
        <label class="block mb-1 font-medium">Email</label>
        <input name="email" type="email" class="w-full px-4 py-2 rounded-md bg-gray-800 border border-gray-700">
      </div>

      <div>
        <label class="block mb-1 font-medium">Phone</label>
        <input name="phone" type="tel" class="w-full px-4 py-2 rounded-md bg-gray-800 border border-gray-700">
      </div>

      <div>
        <label class="block mb-1 font-medium">Business Type</label>
        <input name="businessType" type="text" class="w-full px-4 py-2 rounded-md bg-gray-800 border border-gray-700">
      </div>

      <div>
        <label class="block mb-1 font-medium">Reached Out Date</label>
        <input name="reachedOut" type="date" class="w-full px-4 py-2 rounded-md bg-gray-800 border border-gray-700">
      </div>

      <div>
        <label class="block mb-1 font-medium">Status</label>
        <select name="status" class="w-full px-4 py-2 rounded-md bg-gray-800 border border-gray-700">
          <option value="cold">❄️ Cold</option>
          <option value="warm">🔥 Warm</option>
          <option value="hot">🔥🔥 Hot</option>
          <option value="dead">💀 Dead</option>
        </select>
      </div>

      <div class="text-right pt-4">
        <button class="bg-blue-600 hover:bg-blue-700 submit-prospect-btn px-6 py-2 rounded-md font-medium">
          Save Prospect
        </button>
      </div>
    </form>
  </div>
</div>
