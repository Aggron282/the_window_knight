<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Blog Manager | The Window Knight</title>
  <link rel="stylesheet" href="/css/blog.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Teko:wght@400;500;600&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <style>
    body {
      font-family: 'Teko', sans-serif;
      background: linear-gradient(to right, #001420, #002332);
      color: white;
      margin: 0;
      padding: 0;
    }
    .navbar {
      background: #002f47;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: white;
      box-shadow: 0 2px 5px rgba(0,0,0,0.4);
    }
    .navbar a, .navbar button {
      color: white;
      text-decoration: none;
      margin-right: 20px;
      font-size: 20px;
    }
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-content {
      display: none;
      position: absolute;
      background-color: #002f47;
      min-width: 160px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.2);
      z-index: 1;
    }
    .dropdown-content a {
      padding: 10px 16px;
      display: block;
      color: white;
      text-decoration: none;
    }
    .dropdown:hover .dropdown-content {
      display: block;
    }
    .blog-header {
      padding: 20px;
      text-align: center;
    }
    .blog-header h1 {
      font-size: 48px;
      margin: 0 0 10px;
    }
    .add-button {
      font-size: 40px;
      background: #00e1ff;
      color: #001420;
      border: none;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      cursor: pointer;
    }
    .blog-feed {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      padding: 20px;
    }
    .blog-card {
      background: #002f47;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 0 10px rgba(0,0,0,0.5);
      transition: transform 0.3s ease;
    }
    .blog-card:hover {
      transform: scale(1.03);
    }
    .cover-thumb {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }
    .card-content {
      padding: 15px;
    }
    .card-content h2 {
      margin: 0;
      font-size: 24px;
    }
    .card-content h4 {
      margin: 5px 0;
      font-size: 18px;
      color: #00e1ff;
    }
    .card-content p {
      font-size: 16px;
      color: #ccc;
    }
    .card-content button {
      margin-top: 10px;
      background: crimson;
      border: none;
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
    }
    .modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(0,0,0,0.8);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }
    .modal.hidden {
      display: none;
    }
    .modal-content {
      background: #002332;
      padding: 30px;
      border-radius: 10px;
      width: 90%;
      max-width: 600px;
      color: white;
    }
    .modal-content input,
    .modal-content textarea {
      width: 100%;
      margin-bottom: 15px;
      padding: 10px;
      border-radius: 6px;
      border: none;
      font-size: 16px;
    }
    .modal-content button[type="submit"] {
      background: #00e1ff;
      color: #001420;
      font-size: 18px;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      cursor: pointer;
    }
    .close {
      float: right;
      font-size: 30px;
      color: white;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <div>
      <a href="/">Home</a>
      <a href="https://www.thewindowknight.com" target="_blank">Main Site</a>
    </div>
    <div class="dropdown">
      <span>üë§ Profile</span>
      <div class="dropdown-content">
        <a href="/profile">Edit Credentials</a>
        <a href="/">Main Site</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>

  <div class="blog-header">
    <h1>Blog Manager</h1>
    <button class="add-button" onclick="openModal()">+</button>
  </div>

  <div class="blog-feed" id="blogFeed">
    <% if(blogs && blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="blog-card" id="blog-<%= blog._id %>">
          <img src="<%= blog.coverImage %>" class="cover-thumb" />
          <div class="card-content">
            <h2><%= blog.title %></h2>
            <h4><%= blog.subtitle %></h4>
            <p><%= blog.description.slice(0, 100) %>...</p>
            <button onclick="deleteBlog('<%= blog._id %>')">‚ùå</button>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p style="text-align:center; width:100%; font-size:24px">No blogs found.</p>
    <% } %>
  </div>

  <div id="blogModal" class="modal hidden">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>Add New Blog</h2>
      <form id="blogForm">
        <input type="text" name="title" placeholder="Title" required />
        <input type="text" name="subtitle" placeholder="Subtitle" required />
        <input type="text" name="author" placeholder="Author" required />
        <input type="file" name="cover" accept="image/*" required />
        <input type="file" name="gallery" accept="image/*" multiple />
        <textarea name="html" placeholder="Write your article HTML here..." rows="10" required></textarea>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById('blogModal').classList.remove('hidden');
    }
    function closeModal() {
      document.getElementById('blogModal').classList.add('hidden');
    }

    function deleteBlog(id) {
      axios.delete(`/api/blogs/${id}`).then(() => {
        document.getElementById(`blog-${id}`).remove();
      }).catch(err => alert('Failed to delete.'));
    }

    document.getElementById('blogForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      const form = e.target;
      const formData = new FormData(form);
      try {
        await axios.post('/api/blogs', formData, {
          headers: { 'Content-Type': 'multipart/form-data' }
        });
        location.reload();
      } catch (err) {
        console.error(err);
        alert('Failed to submit blog.');
      }
    });
  </script>
</body>
</html>
